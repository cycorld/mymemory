<div class="container">
  <div class="row">
    <div class="hero-unit">
      <div class="text-center">
        <h2>회원 가입을 위한 마지막 절차입니다.</h2>
      </div>
      <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="controls">
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>
        <div class="controls">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div class="controls">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
        </div>
        <div class="controls">
          <%= f.label :student_id %>
          <%= f.number_field :student_id %>
        </div>
        <div class="controls">
          <%= f.label :department_id %>
          <%= f.number_field :department_id %>
        </div>
        <div class="controls">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
